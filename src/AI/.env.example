# Oasis AI Service - GPU Configuration
# Copy this file to .env and adjust values as needed

# Enable/disable GPU acceleration
# true = use GPU, false = CPU only
GPU_ENABLED=true

# Number of layers to load on GPU
# undefined/auto = automatic (recommended)
# 0 = CPU only
# 10-50 = specific number of layers
GPU_LAYERS=auto

# VRAM padding in MB to reserve
# Prevents out-of-memory errors
# 64MB = minimal (for <4GB VRAM)
# 128MB = moderate (for 8-16GB VRAM) 
# 256MB = safe (for GPU XXL 24GB)
# 512MB = conservative (for stability)
VRAM_PADDING=256

# Service port
PORT=3011

# Examples for different GPU configurations:

# GPU XXL (24GB VRAM) - Maximum Performance:
# GPU_ENABLED=true
# GPU_LAYERS=auto
# VRAM_PADDING=128

# GPU XXL (24GB VRAM) - Balanced:
# GPU_ENABLED=true
# GPU_LAYERS=auto
# VRAM_PADDING=256

# RTX 3080 (10GB VRAM) - Conservative:
# GPU_ENABLED=true
# GPU_LAYERS=30
# VRAM_PADDING=512

# GTX 1660 (6GB VRAM) - Limited:
# GPU_ENABLED=true
# GPU_LAYERS=15
# VRAM_PADDING=512

# CPU Only (any system):
# GPU_ENABLED=false