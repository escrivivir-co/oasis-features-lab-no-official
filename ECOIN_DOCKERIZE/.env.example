# ECOin Docker Environment Configuration
# Copy this file to .env and modify as needed

# ECOin RPC Configuration
ECOIN_RPC_USER=ecoinuser
ECOIN_RPC_PASSWORD=ecoinpass123
ECOIN_RPC_BIND=0.0.0.0
ECOIN_RPC_PORT=9332

# ECOin Network Configuration  
ECOIN_P2P_PORT=9333
ECOIN_MODE=daemon

# Build Configuration
# Options: "source" (compile from source) or "binary" (use precompiled binaries if available)
ECOIN_BUILD_MODE=binary

# Binary URLs (when ECOIN_BUILD_MODE=binary)
# ARM64/aarch64 binaries
ECOIN_BINARY_DAEMON_URL=https://ecoin.03c8.net/packages/arm64/ecoind
ECOIN_BINARY_DAEMON_MD5=d6dd3b8a82c8ea7c484cb2bbe3985f0c
ECOIN_BINARY_QT_URL=https://ecoin.03c8.net/packages/arm64/ecoin-qt
ECOIN_BINARY_QT_MD5=dc59ebf19d18ded8d17b536dadfcee8a

# VNC Configuration
VNC_PASSWORD=ecoinvnc
DISPLAY=:1

# Docker Configuration
COMPOSE_PROJECT_NAME=ecoin-dockerized
COMPOSE_FILE=docker-compose.yml

# Host Ports (change these if you need different ports)
HOST_RPC_PORT=9332
HOST_P2P_PORT=9333
HOST_VNC_PORT=5900
HOST_GUI_VNC_PORT=5901

# Volume Paths (relative to project root)
ECOIN_DATA_PATH=./volumes/ecoin-data
ECOIN_GUI_DATA_PATH=./volumes/ecoin-gui-data
ECOIN_LOGS_PATH=./volumes/logs
ECOIN_GUI_LOGS_PATH=./volumes/gui-logs

# Build Configuration
DOCKERFILE_PATH=./Dockerfile
DOCKER_BUILD_CONTEXT=.

# Security
ECOIN_USER_ID=1000
ECOIN_GROUP_ID=1000